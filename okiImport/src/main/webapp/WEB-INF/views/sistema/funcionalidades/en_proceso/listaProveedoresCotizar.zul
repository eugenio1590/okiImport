<zk xmlns:w="client" xmlns:n="native">
	<window border="none" title="Lista de Proveedores"
		apply="org.zkoss.bind.BindComposer" width="@bind(vm.size)"
		height="@bind(vm.size)" closable="true" sclass="winMyList"
		viewModel="@id('vm') @init('com.okiimport.app.mvvm.controladores.ListaProveedorCotizarViewModel')">

		<!-- LISTA DE PROVEEDORES A COTIZAR-->
		<panel sclass="borderGrid">
			<panelchildren>
				<hbox width="100%" align="center">
					<paging id="pagProveedores" hflex="1" sclass="custom-paging"
						onPaging="@command('paginarLista')" autohide="true" />
					<div sclass="z-paging z-paging-info"
						height="28px">
						<label id="lblProveedores" sclass="rRmWwb-info" />
					</div>
				</hbox>
				<listbox id="gridProveedores" sclass="mylist"
					emptyMessage="No hay solicitudes" model="@load(vm.proveedores)"
					pagingPosition="top"
					onAfterRender="@command('updatePaging', paging = pagProveedores, label=lblProveedores)">
					<auxhead>

						<auxheader />
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<spinner instant="true" hflex="1"
								width="150px" constraint="no negative, no zero"
								value="@bind(vm.proveedorFiltro.cedula)"
								placeholder="Buscar por RIF"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader>
							<div sclass="z-icon-filter bigger-200" />
							<textbox instant="true" hflex="1"
								value="@bind(vm.proveedorFiltro.nombre)"
								placeholder="Buscar por Nombre"
								onChange="@command('aplicarFiltro')" />
						</auxheader>
						<auxheader colspan="1"></auxheader>
						<auxheader colspan="1" />
						<auxheader width="20%" />

					</auxhead>
					<listhead>
						<listheader width="2%" />
						<listheader id="id" label="RIF"
							sort="auto(cedula)" width="18%" />
						<listheader id="nombre" label="Nombre"
							sort="auto(nombre)" width="18%" />
						<listheader label="Estado" sort="none"
							width="31%" />
						<listheader label="Foto" sort="none"
							align="center" width="18%" />
						<listheader label="Operaciones" width="15%"
							sort="none" />
					</listhead>

					<template name="model">
						<listitem>
							<listcell label="${forEachStatus.index+1}"
								sclass="boxed-grey" />
							<listcell label="@bind(each.cedula)" />
							<listcell label="@bind(each.nombre)" />
							<listcell label="@bind(each.estatus)" />
								<listcell></listcell>
								<listcell>
									<div
										class="btn-group btn-group-sm">
										<button
											iconSclass="fa fa-file purple bigger-160"
											tooltiptext="Cotizar"
											onClick="@command('cotizar', proveedor = each)" />
									</div>
								</listcell>
						</listitem>
					</template>
				</listbox>
			</panelchildren>
		</panel>

	</window>
</zk>